<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="#ea9b07">

    <RelativeLayout
        android:id="@+id/ll_parent"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/nama_resep"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/img_resep"
            android:layout_toRightOf="@+id/img_resep"
            android:text="Nama Resep"
            android:textSize="30sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/img_resep"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@mipmap/ic_launcher"
            android:layout_below="@+id/nama_resep"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/deskripsi"
            android:layout_width="275dp"
            android:layout_height="60dp"
            android:text="Deskripsi"
            android:textSize="18sp"
            android:layout_toRightOf="@+id/img_resep"
            android:layout_toEndOf="@+id/img_resep"
            android:layout_alignBottom="@+id/img_resep"
            android:layout_below="@+id/nama_resep" />
    </RelativeLayout>
</android.support.v7.widget.CardView>